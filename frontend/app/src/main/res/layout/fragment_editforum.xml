<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Input fields for creating a new forum -->
        <EditText
            android:id="@+id/newForumTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/newForumDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/newForumLockedCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/newForumAccessLevelEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Access Level"
            android:inputType="text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/newForumOwnerIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Owner ID"
            android:inputType="number"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Button to add a new forum -->
        <Button
            android:id="@+id/addForumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Forum"
            android:layout_marginTop="8dp"/>

        <!-- Container layout for existing forums -->
        <LinearLayout
            android:id="@+id/containerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"/>

    </LinearLayout>

</ScrollView>
